---
const frbvmab = Astro.props
---
    
<!-- FEATURES COMPONENT-->
<div class="list-frbvmab-v1_0_0">
<section class="features">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h2>{frbvmab.title}</h2>
            </div>
        </div>
        <div class="row">
            {frbvmab.cards.map((item) => (
            <div class="col-md-4">
                <article class="card">
                    <div class="card__icon">
                        <img src="https://placehold.co/48x48" alt="icon">
                    </div>
                    <h4 class="card__title">{item.title}</h4>
                    <p class="card__text">{item.text}</p>
                </article>
            </div>
            ))}
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <a href={frbvmab.button.href} class="button button--primary">{frbvmab.button.label}</a>
            </div>
        </div>
    </div>
</section>
</div>
