---
const frfajbm = Astro.props
---
    
<!-- HERO BANNER COMPONENT-->
<div class="hero-frfajbm-v1_0_0">
<section class="hero" aria-labelledby="hero-heading">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 id="hero-heading">{frfajbm.title}</h1>
                <p class="subheadline">{frfajbm.text}</p>
                <div class="button-group mt-8" role="group" aria-label="Call to action buttons">
                    {frfajbm.buttons.map((item) => (
                    <a href={item.href} class={item.class} aria-label={item.label}>{item.label}</a>
                    ))}
                </div>
            </div>
            <div class="col-md-6">
                <img 
                     src="https://placehold.co/800x600" 
                     alt="FlowSync Dashboard interface showing connected integrations and automation running between Slack, Notion, and Email"
                     width="800"
                     height="600"
                     >
            </div>
        </div>
    </div>
</section>
</div>
